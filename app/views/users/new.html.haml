%section.register.container
  .row
    .col-sm-10.col-sm-offset-1

      = bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-7") do |f|
        %header
          %h1 Register
        %fieldset
        = hidden_field_tag :invite_token, @invite.invite_token if @invite
        = f.text_field :name, label: "Full Name", value: (!!@invite ? "#{@invite.name}" : "")
        = f.email_field :email, label: "Email Address", value: (!!@invite ? "#{@invite.email}" : "")
        = f.password_field :password
        = f.submit 'Sign Up'
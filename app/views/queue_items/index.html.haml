%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        - if @queue_items.empty?
          .alert.alert-info.text-center
            %h3 You do not have any items in your queue.
        - else
          = form_tag '/modify_queue' do
            %table.table
              %thead
                %tr
                  %th(width="10%") List Order
                  %th(width="30%") Video Title
                  %th(width="10%") Play
                  %th(width="20%") Rating
                  %th(width="15%") Genre
                  %th(width="15%") Remove
              %tbody
                - @queue_items.each_with_index do |item, index|
                  %tr
                    %td
                      = hidden_field_tag "queue_items[][id]", item.id
                      = text_field_tag "queue_items[][position]", item.position, class: "form-control", id: "item_#{index}_position"
                    %td
                      = link_to item.video_title, video_path(item.video), id: "item_#{index}_title"
                    %td
                      = button_to "Play", nil, class: "btn btn-default"
                    %td
                      = select_tag "queue_items[][rating]", options_for_review_rating(item.rating), class: "form-control", id: "item_#{index}_rating"
                    %td
                      - item.genres.each do |genre| 
                        = link_to genre.name, category_path(genre)
                    %td
                      = link_to item, method: :delete do
                        %i.glyphicon.glyphicon-remove
            = submit_tag "Update Instant Queue", class: "btn btn-default"
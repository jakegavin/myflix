%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-7") do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          = f.text_field :title
          = f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|
            - cb.label(class: 'checkbox-inline') {cb.check_box(class: 'checkbox') + cb.text}
          = f.text_area :description, rows: 8
          .form-group
            %label.control-label.col-sm-3 Large Cover
            .col-sm-6
              %col.btn.btn-file
                %input.form-control(type="file")
          .form-group
            %label.control-label.col-sm-3 Small Cover
            .col-sm-6
              %col.btn.btn-file
                %input.form-control(type="file")
          = f.submit 'Add Video'
